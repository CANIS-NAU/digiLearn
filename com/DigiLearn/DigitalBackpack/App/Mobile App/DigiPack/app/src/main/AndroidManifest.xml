<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.digipack">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/digipacklogo_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/digipacklogo_foreground"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">

        <!-- activities -->
        <activity android:name="com.example.digipack.SignInActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.example.digipack.CourseDetailsActivity" android:theme="@style/Theme.AppCompat.Light"/>
        <activity android:name="com.example.digipack.DetailsActivity" android:theme="@style/Theme.AppCompat.Light"/>
        <activity android:name="com.example.digipack.FileListViewActivity" android:theme="@style/Theme.AppCompat.Light"/>
        <activity android:name="com.example.digipack.GClassActivity"  android:theme="@style/Theme.AppCompat.Light"/>
        <activity android:name="com.example.digipack.popUp"  android:theme="@style/Theme.AppCompat.Light"/>

    </application>

</manifest>